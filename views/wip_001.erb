function fadeAudioIn(scWidget, dt, fadeTimeMs){
  if(readyToFadeAudio){
    scWidget.getVolume(function(prevVol) {
      deltaVol = dt/fadeTimeMs;
      scWidget.setVolume(Math.min(100,prevVol + deltaVol));
    });
  }
}

function setWidgetToLoop(scWidget, lastTrackDuration){
  scWidget.bind(SC.Widget.Events.FINISH, function(){
    scWidget.isPaused(function(paused){
      if(paused){
        scWidget.skip(0);
      }
    });
  });
}

function initSquigglesAndAudio(widget) {
  releaseStartTime = (Date.now() % releaseDuration);

  if(releaseStartTime < sideA_duration){
    toPlaySide = SIDE_A;
    toPlaySeektime = releaseStartTime;
  }else{
    toPlaySide = SIDE_B;
    toPlaySeektime = (releaseStartTime - sideA_duration);
  }
  initSquiggles(toPlaySeektime/1000, toPlaySide);


  widget.bind(SC.Widget.Events.PLAY, function(){
    widget.seekTo(toPlaySeektime);
  });

  widget.bind(SC.Widget.Events.SEEK, function(){
    readyToFadeAudio = true;
    widget.unbind(SC.Widget.Events.PLAY);
  });

  widget.bind(SC.Widget.Events.PLAY_PROGRESS, function(sound){
    widget.getCurrentSoundIndex(function(soundIndex) {
      updateSquiggles(sound.currentPosition/1000, soundIndex);
    });
  });

  widget.skip(toPlaySide);
}

