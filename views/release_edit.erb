<div id='container' style='padding: 25px'>

  <h1> ways inner pass</h1>

  <p class="lead"><b><%= release.cat_no %></b> (edit)</p>

  <form role="form" style="width:600px" action="/release/<%= release.cat_no %>" method="post">
    <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
      <label>Artist</label>
      <input type="text" class="form-control" name="artist" value="<%= release.artist %>">
    </div>
    <div class="form-group">
      <label>Title</label>
      <input type="text" class="form-control" name="title" value="<%= release.title %>">
    </div>
    <div class="form-group">
      <label>Release Type</label>
      <input type="text" class="form-control" name="release_type" value="<%= release.release_type %>">
    </div>
    <div class="form-group">
      <label>Description</label>
      <textarea class="form-control" name="description" rows="5"><%= h release.description %></textarea>
    </div>
    <div class="form-group">
      <label>Cover Art</label>
      <button type='button' class="btn btn-default btn-xs" data-toggle="modal" data-target="#cover-art-modal">
        Choose Image
      </button>
      <input type="hidden" class="form-control" name="cover_art" id="cover-art-input" value=''>
      <div id="cover-art-display" class='well'></div>
    </div>
    <div class="form-group">
      <label>Hover Art</label>
      <button type='button' class="btn btn-default btn-xs" data-toggle="modal" data-target="#hover-art-modal">
        Choose Image
      </button>
      <input type="hidden" class="form-control" name="hover_art" id="hover-art-input" value=''>
      <div id="hover-art-display" class='well'></div>
    </div>
    <div class="form-group" id="back-images-input">
      <label>Background Images</label>
      <button type='button' class="btn btn-default btn-xs" data-toggle="modal" data-target="#back-images-modal">
        Select Background Images
      </button>
      <ul class='well'>
      </ul>
    </div>
    <div class="form-group">
      <label>Release Date</label>
      <input name="release_date"  class="form-control" type="date" value=<%= release.release_date %> style="width: 175px">
    </div>
    <div class="checkbox">
      <label>
        <input type="checkbox" name="published" value="Published" <%= release.published == 'Published' ? 'checked' : '' %> > Published
      </label>
    </div>
    <button type="submit" class="btn btn-default">Save</button>
  </form>
</div>

<%= erb :modals, :locals => {:images => images} %>

<script>


$(function (){
  $('#cover-art-modal').find('img[src="<%= release.cover_art %>"]').parent().addClass('selected');
  setCoverArt();

  $('#hover-art-modal').find('img[src="<%= release.hover_art %>"]').parent().addClass('selected');
  setHoverArt();

  initBackImages(<%= release.images %>);
});


</script>

